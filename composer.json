{
    "name": "pforret/php_markdown_writer",
    "version": "1.0.0",
    "description": "Write Markdown documents",
    "keywords": [
        "pforret",
        "markdown",
        "php_markdown_writer"
    ],
    "homepage": "https://github.com/pforret/php_markdown_writer",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "league/commonmark": "^2.8",
        "mpdf/mpdf": "^8.2"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\PhpMarkdownWriter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\PhpMarkdownWriter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
