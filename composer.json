{
    "name": "pforret/php_markdown_writer",
    "version": "0.1.0",
    "description": "Write Markdown documents",
    "keywords": [
        "pforret",
        "php_markdown_writer"
    ],
    "homepage": "https://github.com/pforret/php_markdown_writer",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\PhpMarkdownWriter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\PhpMarkdownWriter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
